generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl      = env("DIRECT_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  firstName String
  lastName String
  password String
  posts  Posts[]
}

model Posts {
  id Int @id @default(autoincrement())
  title String
  Post String
  userId Int
  user Users @relation(references: [id], fields: [userId])
}
